@page
@model Aplication2NetRazor.Pages.Alumnos.RegistrarModel
@{
    ViewData["Title"] = "Registrar nuevo alumno";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Listado de alumnos</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.NombreAlumno">

                            </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.NombreAlumno" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.NombreAlumno" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.ApellidoAlumno">

                            </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.ApellidoAlumno" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.ApellidoAlumno" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Fecha_nac">

                            </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Fecha_nac" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Fecha_nac" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Cant_cursos">

                            </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Cant_cursos" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Cant_cursos" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <input type="submit" value="Registrar" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a cursos</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>