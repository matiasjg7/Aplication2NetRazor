@page
@model Aplication2NetRazor.Pages.Profesores.BorrarModel
@{
    ViewData["Title"] = "Eliminar Profesor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Lista de Profesores</h2>  
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="Profesor.idProfesor" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.NombreProfesor"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.NombreProfesor" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.NombreProfesor" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.ApellidoProfesor"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.ApellidoProfesor" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.ApellidoProfesor" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Especialidad"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Especialidad" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Especialidad" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Fecha_ing"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Fecha_ing" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Fecha_ing" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Fecha_nac"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Fecha_nac" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Fecha_nac" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Borrar" class="btn btn-danger form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>